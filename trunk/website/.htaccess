<IfModule mod_rewrite.c>
	Options +FollowSymLinks
	Options +Indexes
	RewriteEngine On
	
	
	RewriteRule ^panel/settings/([^.]*)/ /inc/handle_panel.php?page=$1&type=settings [L]
	RewriteRule ^panel/([^.]*)/ /inc/handle_panel.php?page=$1&type= [L]
	
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME}\.php -f 
	RewriteRule ^(.*)([^/]*)$ $1.php [QSA]
		
	# page rewrites
	
	RewriteRule ^developers/ api.php
	RewriteRule ^intro/ about.php
	RewriteRule ^login/ login.php
	RewriteRule ^signup/ register.php
	RewriteRule ^terms/ terms.php
	
	# image / ranking rewrites
	
	RewriteRule ^card/([^\./]*) /actions/character_image.php?name=$1 [L]
	RewriteRule ^avatar/([^\./]*) /actions/character_avatar.php?name=$1 [L]
	RewriteRule ^infopic/([^\./]*) /actions/character_stats.php?name=$1 [L]
	
	# character / player rewrites
	RewriteRule ^stats/([^/]*)$ /character.php?name=$1
	
</IfModule>

Options -Indexes

ErrorDocument 400 /actions/error/index.php
ErrorDocument 401 /actions/error/index.php
ErrorDocument 403 /actions/error/index.php
ErrorDocument 404 /actions/error/index.php
ErrorDocument 500 /actions/error/index.php